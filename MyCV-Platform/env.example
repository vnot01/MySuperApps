# MyCV-Platform Environment Configuration
# Copy this file to .env and modify as needed

# Application Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true

# Model Configuration
DEFAULT_YOLO_MODEL=yolo11s.pt
DEFAULT_SAM_MODEL=sam2.1_l.pt
DEFAULT_CONFIDENCE=0.5
MAX_IMAGE_SIZE=10MB
ALLOWED_IMAGE_FORMATS=jpg,jpeg,png,bmp,tiff

# Storage Paths
DATA_PATH=/app/data
MODELS_PATH=/app/data/models
OUTPUT_PATH=/app/data/output
LOGS_PATH=/app/logs
UPLOAD_PATH=/app/data/input

# GPU Configuration
CUDA_VISIBLE_DEVICES=0
USE_GPU=true
GPU_MEMORY_FRACTION=0.8
AUTO_DETECT_GPU=true
FORCE_CPU_MODE=false
GPU_MEMORY_LIMIT=8GB

# Processing Mode Configuration
PROCESSING_MODE=auto  # auto, gpu, cpu
MOCK_DATA_MODE=false
ENABLE_MOCK_DATA_TESTING=true
MOCK_DATA_SIZE=640  # Image size for mock data testing

# API Configuration
API_KEY=your-secret-api-key-here
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000", "http://cv-host:8000"]
RATE_LIMIT_PER_MINUTE=60
MAX_CONCURRENT_REQUESTS=10

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Database Configuration (if needed)
DATABASE_URL=sqlite:///./data/cv_platform.db

# Monitoring Configuration
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
METRICS_PORT=9090
GRAFANA_PORT=3000

# Security Configuration
SECRET_KEY=your-super-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# File Upload Configuration
MAX_FILE_SIZE=100MB
UPLOAD_TIMEOUT=300
CLEANUP_OLD_FILES=true
FILE_RETENTION_DAYS=7

# Model Management
AUTO_DOWNLOAD_MODELS=true
MODEL_VALIDATION=true
BACKUP_OLD_MODELS=true
MAX_CONCURRENT_DOWNLOADS=2
DOWNLOAD_TIMEOUT=300

# Performance Configuration
WORKER_PROCESSES=4
WORKER_THREADS=2
REQUEST_TIMEOUT=60
KEEPALIVE_TIMEOUT=5

# Logging Configuration
LOG_FORMAT=json
LOG_FILE_MAX_SIZE=100MB
LOG_FILE_BACKUP_COUNT=5
LOG_ROTATION=daily

# Development Configuration
RELOAD_ON_CHANGE=true
ENABLE_SWAGGER_UI=true
ENABLE_REDOC=true

# Environment Detection Configuration
ENABLE_ENVIRONMENT_DETECTION=true
ENVIRONMENT_DETECTION_VERBOSE=true
AUTO_RUN_ENVIRONMENT_TESTS=true
ENVIRONMENT_TEST_ON_STARTUP=true

# Virtual Environment Configuration
VIRTUAL_ENV_PATH=/app/venv
USE_VIRTUAL_ENVIRONMENT=true
PYTHON_PATH=/app/venv/bin/python
